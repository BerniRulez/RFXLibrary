{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2016",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "rfx-logger": [
        "projects/rfx-logger/src/lib"
      ],
      "rfx-parallax": [
        "projects/rfx-parallax/src/lib"
      ],
      "rfx-scroll-animation": [
        "projects/rfx-scroll-animation/src/lib"
      ]
    }
  }
}
